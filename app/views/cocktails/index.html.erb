<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1>Cocktails</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @cocktails.order("name ASC").each do |cocktail| %>
          <tr>
            <td><%= cocktail.name %></td>
            <td><%= link_to '<i class="fa fa-eye"></i>'.html_safe, cocktail %></td>
            <td><%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_cocktail_path(cocktail) %></td>
            <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <br>
    </div>
  </div>
</div>
