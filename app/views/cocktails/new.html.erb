<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= render 'shared/banner' %>
     <h1>Add a cocktail</h1>
      <%= simple_form_for(@cocktail) do |f| %>
      <%= f.error_notification %>
      <%= f.input :name, label: "Enter name :" , placeholder: "Mojito" %>
      <%= f.input :instruction, label: "Enter instructions :" , placeholder: "mix mint and lemon ..." %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <br>
      <%= f.button :submit , class:'btn-medium'%>
      <% end %>
      <br>
    </div>
  </div>
</div>
