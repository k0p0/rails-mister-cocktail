
<h1 class="text-center">Cocktails TOP 20</h1>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-md-4">
        <div class="card" style="background-image: url(<%= cl_image_path cocktail.photo ; %>);">
            <h1><%= cocktail.name %></h1>
            <h2><% cocktail.vote %> votes</h2>
            <%= link_to "", cocktail, class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
